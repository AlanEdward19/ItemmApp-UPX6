<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:ItemmApp.ViewModel"
             x:Class="ItemmApp.MainPage"
             Shell.NavBarIsVisible="False"
             x:DataType="viewModel:MainViewModel">

    <ScrollView>
        <Grid>
            <!-- Elemento de fundo com cor -->
            <BoxView Color="{AppThemeBinding Dark=#022664, Light=#95CA60}" Opacity="1" />

            <!-- Elemento de imagem (sem fundo) -->
            <Image Source="{AppThemeBinding Dark=itemm_logo_dark.png, Light=itemm_logo_light.png}" Aspect="Center" />

            <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="40"
            Padding="5,0,5,0">

                <StackLayout>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="320" />
                            <RowDefinition Height="320" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="190" />
                            <ColumnDefinition Width="190" />
                        </Grid.ColumnDefinitions>

                        <Frame Grid.Row="0" Grid.Column="0" BorderColor="{AppThemeBinding Dark=#CC000A1B, Light=#CC95CA60}" BackgroundColor="{AppThemeBinding Dark=#CC000A1B, Light=#CC95CA60}" CornerRadius="10" Margin="10">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Path=MoveToPersonalDepartmentCommand}" />
                            </Frame.GestureRecognizers>

                            <Label Text="Departamento Pessoal" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>

                        </Frame>

                        <Frame Grid.Row="0" Grid.Column="1" BorderColor="{AppThemeBinding Dark=#CC000A1B, Light=#CC95CA60}" BackgroundColor="{AppThemeBinding Dark=#CC000A1B, Light=#CC95CA60}" CornerRadius="10" Margin="10">
                            <Label Text="Setor Social" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Frame>

                        <Frame Grid.Row="1" Grid.Column="0" BorderColor="{AppThemeBinding Dark=#CC000A1B, Light=#CC95CA60}" BackgroundColor="{AppThemeBinding Dark=#CC000A1B, Light=#CC95CA60}" CornerRadius="10" Margin="10">
                            <Label Text="Setor Pedagógico" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Frame>

                        <Frame Grid.Row="1" Grid.Column="1" BorderColor="{AppThemeBinding Dark=#CC000A1B, Light=#CC95CA60}" BackgroundColor="{AppThemeBinding Dark=#CC000A1B, Light=#CC95CA60}" CornerRadius="10" Margin="10">
                            <Label Text="Configurações" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Frame>
                    </Grid>
                </StackLayout>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
