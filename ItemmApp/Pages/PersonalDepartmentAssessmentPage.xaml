<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:ItemmApp.ViewModel"
             x:Class="ItemmApp.PersonalDepartmentAssessmentPage"
             BackgroundColor="{AppThemeBinding Dark=#022664, Light=#95CA60}"
             Shell.NavBarIsVisible="False"
             x:DataType="viewModel:PersonalDepartmentAssessmentViewModel">

    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="30"
            Padding="20,0,20,0">

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="150">
                <Frame BackgroundColor="White" CornerRadius="40" WidthRequest="45" HeightRequest="45" HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Path=MoveBackCommand}" />
                    </Frame.GestureRecognizers>

                    <Image Source="arrow_icon.png" Aspect="AspectFit" WidthRequest="20" HeightRequest="20" HorizontalOptions="Center" VerticalOptions="Center" />
                </Frame>

                <HorizontalStackLayout Spacing="10">
                    <Image
                        Source="{AppThemeBinding Dark=itemm_logo_dark.png, Light=itemm_logo_light.png}"
                        SemanticProperties.Description="Cute dot net bot waving hi to you!"
                        HeightRequest="50"
                        HorizontalOptions="Center" />

                    <Image
                        Source="itemm_text.png"
                        SemanticProperties.Description="Cute dot net bot waving hi to you!"
                        HeightRequest="20"
                        HorizontalOptions="Center" />
                </HorizontalStackLayout>

            </HorizontalStackLayout>

            <StackLayout Spacing="3">
                <Label Padding="5,0,0,0"
                       HorizontalTextAlignment="Start" 
                       FontSize="15"
                       TextColor="White"
                       VerticalOptions="Start" 
                       Text="Data Avaliação"
                       FontFamily="Inter"
                       TextDecorations="Underline"></Label>

                <Border
                    StrokeThickness="2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <DatePicker Format="dd/MM/yyyy" TextColor="#545F71" BackgroundColor="White" HorizontalOptions="Fill"></DatePicker>
                </Border>

            </StackLayout>

            <StackLayout Spacing="3">
                <Label Padding="5,0,0,0"
                       HorizontalTextAlignment="Start" 
                       FontSize="15"
                       TextColor="White"
                       VerticalOptions="Start" 
                       Text="Nome"
                       FontFamily="Inter"
                       TextDecorations="Underline"></Label>

                <Border
                    StrokeThickness="2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <Entry FontSize="15" 
                           TextColor="#545F71" 
                           BackgroundColor="White"
                           IsPassword="True" 
                           FontFamily="Inter" 
                           ClearButtonVisibility="WhileEditing"></Entry>
                </Border>

            </StackLayout>

            <StackLayout>

                <StackLayout>

                    <Grid ColumnSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackLayout Grid.Row="0" Grid.Column="0" Spacing="3">
                            <Label Padding="5,0,0,0"
                               HorizontalTextAlignment="Start" 
                               FontSize="15"
                               TextColor="White"
                               VerticalOptions="Start" 
                               Text="Nivel"
                               FontFamily="Inter"
                               TextDecorations="Underline"></Label>

                            <Border
                                StrokeThickness="2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>

                                <Entry FontSize="15" 
                                       TextColor="#545F71" 
                                       BackgroundColor="White"
                                       IsPassword="False" 
                                       FontFamily="Inter" 
                                       ClearButtonVisibility="WhileEditing"></Entry>
                            </Border>

                        </StackLayout>

                        <StackLayout Grid.Row="0" Grid.Column="1" Spacing="3">
                            <Label Padding="5,0,0,0"
                               HorizontalTextAlignment="Start" 
                               FontSize="15"
                               TextColor="White"
                               VerticalOptions="Start" 
                               Text="Turma"
                               FontFamily="Inter"
                               TextDecorations="Underline"></Label>

                            <Border
                                StrokeThickness="2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>

                                <Entry FontSize="15" 
                                       TextColor="#545F71" 
                                       BackgroundColor="White"
                                       IsPassword="False" 
                                       FontFamily="Inter" 
                                       ClearButtonVisibility="WhileEditing"></Entry>
                            </Border>
                        </StackLayout>

                        <StackLayout Grid.Row="1" Grid.Column="0" Spacing="3">
                            <Label Padding="5,0,0,0"
                               HorizontalTextAlignment="Start" 
                               FontSize="15"
                               TextColor="White"
                               VerticalOptions="Start" 
                               Text="Modulo"
                               FontFamily="Inter"
                               TextDecorations="Underline"></Label>

                            <Border
                                StrokeThickness="2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>

                                <Entry FontSize="15" 
                                       TextColor="#545F71" 
                                       BackgroundColor="White"
                                       IsPassword="False" 
                                       FontFamily="Inter" 
                                       ClearButtonVisibility="WhileEditing"></Entry>
                            </Border>

                        </StackLayout>

                        <StackLayout Grid.Row="1" Grid.Column="1" Spacing="3">
                            <Label Padding="5,0,0,0"
                               HorizontalTextAlignment="Start" 
                               FontSize="15"
                               TextColor="White"
                               VerticalOptions="Start" 
                               Text="Empresa"
                               FontFamily="Inter"
                               TextDecorations="Underline"></Label>

                            <Border
                                StrokeThickness="2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>

                                <Entry FontSize="15" 
                                       TextColor="#545F71" 
                                       BackgroundColor="White"
                                       IsPassword="False" 
                                       FontFamily="Inter" 
                                       ClearButtonVisibility="WhileEditing"></Entry>
                            </Border>
                        </StackLayout>

                    </Grid>

                </StackLayout>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="100">
                    <Button 
                        Text="Adicionar"
                        TextColor="White"
                        BorderColor="White"
                        BorderWidth="1"
                        Background="{AppThemeBinding Dark=#022664, Light=#95CA60}"
                        FontSize="12" 
                        FontFamily="Inter"
                        FontAttributes="Bold"
                        Command="{Binding Path=MoveToAddAssessmentCommand}"
                    />

                    <Button 
                        Text="Excluir"
                        TextColor="White"
                        BorderColor="White"
                        BorderWidth="1"
                        Background="{AppThemeBinding Dark=#022664, Light=#95CA60}"
                        FontSize="12" 
                        FontFamily="Inter"
                        FontAttributes="Bold"
                    />
                </HorizontalStackLayout>

                <StackLayout Padding="0,20,0,10">
                    <Frame BackgroundColor="White" HeightRequest="300">
                        <ListView></ListView>
                    </Frame>
                </StackLayout>

            </StackLayout>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
